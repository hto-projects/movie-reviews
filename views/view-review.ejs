<%- include('partials/header') %>
<div class="container">
<% if (add) { %>
	<form method="post" action="/add">
		<div class="form-row">
			<div class="form-group col-md-4">
				<label for="reviewer">Your Name</label>
				<input type="text" class="form-control" name="reviewer" required>
			</div>
			<div class="form-group col-md-4">
				<label for="moviteTitle">Movie Name</label>
				<input type="text" class="form-control" name="movieTitle"required>
			</div>
			<div class="form-group col-md-4">
				<label for="rating">Rating</label>
				<input type="number" min="0" max="5" class="form-control" name="rating" required>
			</div>
		</div>
		<div class="form-row">
			<div class="form-group col-md-12">
				<label for="reviewDescription">Review</label>
				<textarea class="form-control" name="reviewDescription" required></textarea>
			</div>
    </div>
		<button type="submit" class="btn btn-success float-right">Add Review</button>
	</form>
<% } else if (review) { %>
  <div>
    <h3>Reviewer: <span style="color:forestgreen"><%= review.reviewer %></span></h3>
    <h3>Movie Name: <span style="color:forestgreen"><%= review.movieTitle %></span></h3>
    <h3>Rating: <span style="color:forestgreen"><%= review.rating %></span></h3>
  </div>
  <div>
    <p><%= review.reviewDescription %></p>
  </div>
<% } else { %>
	<p class="text-center">Review Not Found.</p>
<% } %>
</div>
</div>
</body>
</html>
